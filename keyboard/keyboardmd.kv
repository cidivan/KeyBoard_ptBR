<BoxKeyBoard>:
    orientation: 'vertical'
    padding:10
    spacing: 10

    MDTopAppBar:
        title: "Phonetic Keyboard pt-BR"
        right_action_items: [["menu", lambda x: root.about(x)]]
        mode: "free-end"

    MDScrollView:
        size_hint_y: None
        height: 200
        MDBoxLayout:
            orientation: 'vertical'
            id:item
            size_hint_y:None
            height: self.minimum_height

    MDTextField:
